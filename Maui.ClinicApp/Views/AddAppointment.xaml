<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ClinicApp.Views.AddAppointment"
             Title="AddAppointment">
    <VerticalStackLayout>
        <Label 
            Text="Add Appointment"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Label Text="Enter Appointment Date:"/>
        <Entry Text="{Binding AppointmentDate}"/>
        <Label Text="Enter Appointment Time (9-16 for 9am to 4pm, each appointment lasts 1 hour):"/>
        <Entry Text="{Binding AppointmentTime}"/>
        <Button Text="Add" Clicked="AddClicked" />
        <Button Text="Back" Clicked="BackToAppointmentPage" />
    </VerticalStackLayout>
</ContentPage>