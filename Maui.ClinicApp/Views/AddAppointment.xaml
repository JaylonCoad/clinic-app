<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ClinicApp.Views.AddAppointment"
             NavigatedTo="ContentPage_NavigatedTo"
             Title="Add Appointment">
    <VerticalStackLayout>
        <Label 
            Text="Add Appointment"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Label Text="Enter Appointment Date:"/>
        <DatePicker Date="{Binding AppointmentDate}"/>
        <Label Text="Enter Appointment Time:"/>
        <TimePicker Time="{Binding AppointmentTime}" />
        <Button Text="Add" Clicked="AddClicked" />
        <Button Text="Back" Clicked="BackToAppointmentPage" />
    </VerticalStackLayout>
</ContentPage>