<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ClinicApp.Views.AddAppointment"
             Title="AddAppointment">
    <VerticalStackLayout>
        <Label 
            Text="Add Appointment"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Label Text="Enter Appointment Time:"/>
        <Entry Text="{Binding AppointmentTime}"/>
        <Picker x:Name="myPicker">
        <Picker.Items>
            <x:String>"Option 1"</x:String>
            <x:String>"Option 2"</x:String>
            <x:String>"Option 3"</x:String>
        </Picker.Items>
        </Picker>
        <Button Text="Add" Clicked="AddClicked" />
        <Button Text="Back" Clicked="BackToAppointmentPage" />
    </VerticalStackLayout>
</ContentPage>