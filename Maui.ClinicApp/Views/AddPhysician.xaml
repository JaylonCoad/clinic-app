<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ClinicApp.Views.AddPhysician"
             NavigatedTo="ContentPage_NavigatedTo"
             Title="AddPhysician">
    <VerticalStackLayout>
        <Label 
            Text="Add Physician"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Enter Name:"/>
        <Entry Text="{Binding Name}"/>
        <Label Text="Enter License Number:"/>
        <Entry Text="{Binding LicenseNumber}"/>
        <Label Text="Enter Specialization:"/>
        <Entry Text="{Binding Specialization}"/>
        <Label Text="Enter Graduation:"/>
        <DatePicker Date="{Binding Graduation}"/>
        <Button Text="Add" Clicked="AddClicked"/>
        <Button Text="Back" Clicked="BackToPhysicianPage" />
    </VerticalStackLayout>
</ContentPage>