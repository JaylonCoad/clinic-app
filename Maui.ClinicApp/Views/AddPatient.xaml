<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ClinicApp.Views.AddPatient"
             NavigatedTo="ContentPage_NavigatedTo"
             Title="AddPatient">
    <VerticalStackLayout>
        <Label 
            Text="Add Patient"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="Enter Name:"/>
        <Entry Text="{Binding Name}"/>
        <Label Text="Enter Race:"/>
        <Entry Text="{Binding Race}"/>
        <Label Text="Enter Gender:"/>
        <Entry Text="{Binding Gender}"/>
        <Label Text="Enter Address:"/>
        <Entry Text="{Binding Address}"/>
        <Label Text="Enter Birthday:"/>
        <Entry Text="{Binding Birthday}"/>
        <Button Text="Add" Clicked="AddClicked" />
        <Button Text="Back" Clicked="BackToPatientPage" />
    </VerticalStackLayout>
</ContentPage>