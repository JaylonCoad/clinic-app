<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.ClinicApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Clinic App"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Button Text="Patient View" Clicked="GoToPatientView"/>
            <Button Text="Physician View" Clicked="GoToPhysicianView"/>
            <Button Text="Appointment View" Clicked="GoToAppointmentView"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
